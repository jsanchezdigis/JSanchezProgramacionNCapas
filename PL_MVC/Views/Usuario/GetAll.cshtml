@model ML.Usuario
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <h2>Usuario</h2>
    </div>
    <hr />
    <div class="row">
        <div style="float:right">
            @Html.ActionLink("Agregar Usuario", "Form", "Usuario", htmlAttributes: new { @class = "btn btn-success" })
        </div>
    </div>
    <hr />

    <div class="row">
        @if (Model.Usuarios != null)
        {
            //tabla
            <table class="table table-bordered table-responsive">
                <thead>
                    <tr>
                        <td class="text-center" style=" font-weight:bold;">Editar</td>

                        <td class="hidden">IdUsuario</td>
                        <td class="text-center" style=" font-weight:bold;">Imagen</td>
                        <td class="text-center" style=" font-weight:bold;">UserNombre</td>
                        <td class="text-center" style=" font-weight:bold;">Nombre</td>
                        @*<td class="text-center" style=" font-weight:bold;">Apellido Paterno</td>
        <td class="text-center" style=" font-weight:bold;">Apellido Materno</td>*@
                        <td class="text-center" style=" font-weight:bold;">Email</td>
                        <td class="text-center" style=" font-weight:bold;">Password</td>
                        <td class="text-center" style=" font-weight:bold;">Sexo</td>
                        <td class="text-center" style=" font-weight:bold;">Telefono</td>
                        <td class="text-center" style=" font-weight:bold;">Celular</td>
                        <td class="text-center" style=" font-weight:bold;">Fecha Nacimiento</td>
                        <td class="text-center" style=" font-weight:bold;">CURP</td>
                        <td class="text-center" style=" font-weight:bold;">NombreRol</td>
                        <td class="text-center" style=" font-weight:bold;">Direccion</td>

                        <td class="text-center" style=" font-weight:bold;">Eliminar</td>
                    </tr>
                </thead>

                <tbody>
                    @foreach (ML.Usuario usuario in Model.Usuarios)
                    {
                        <tr>
                            <td class="text-center"><a class="btn btn-warning glyphicon glyphicon-edit" href="@Url.Action("Form", "Usuario", new { IdUsuario = usuario.IdUsuario })"></a></td>

                            <td>
                                @if (usuario.Imagen != null)
                                {

                                    <img id="Img" src="data:image/*;base64,@usuario.Imagen" style="width:250px ; height:250px" />

                                }
                                else
                                {
                                    <img id="Img" src="~/Imagenes/UserDefault.jpg" style="width:250px ; height:250px" />
                                }
                            </td>

                            <td class="hidden">@usuario.IdUsuario</td>
                            <td>@usuario.UserNombre</td>
                            <td>@usuario.Nombre @usuario.ApellidoPaterno @usuario.ApellidoMaterno</td>
                            @*<td>@usuario.ApellidoPaterno</td>
        <td>@usuario.ApellidoMaterno</td>*@
                            <td>@usuario.Email</td>
                            <td>@usuario.Password</td>
                            <td>@usuario.Sexo</td>
                            <td>@usuario.Telefono</td>
                            <td>@usuario.Celular</td>
                            <td>@usuario.FechaNacimiento</td>
                            <td>@usuario.CURP</td>
                            @*<td>@usuario.Imagen</td>*@

                            <td class="hidden">@usuario.Rol.IdRol</td>
                            <td>@usuario.Rol.Nombre</td>

                            <td class="hidden">@usuario.Direccion.IdDireccion</td>
                            <td>@usuario.Direccion.Calle @usuario.Direccion.NumeroInterior @usuario.Direccion.NumeroExterior</td>


                            <td class="text-center"><a class="btn btn-danger glyphicon glyphicon-trash" href="@Url.Action("Delete", "Usuario", new { IdUsuario = usuario.IdUsuario })" onclick="return confirm('Estas seguro que deseas eliminar este registro?');"></a></td>
                        </tr>
                    }
                </tbody>
            </table>


        }
        else
        {
            <div class="alert alert-danger" role="alert">Ocurrio un error al realizar la consulta </div>
        }
    </div>
</div>

